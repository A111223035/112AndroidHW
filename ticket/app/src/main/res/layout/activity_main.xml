<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性別："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/rgGender"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="232dp"
        android:text="張數： "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgGender"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lblOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="458dp" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdbBoy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:checked="true"
            android:text="男"
            tools:ignore="HardcodedText" />

    </RadioGroup>

    <RadioButton
        android:id="@+id/rdbGirl"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:text="女"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="135dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="216dp"
        tools:text="票種：" />

    <RadioButton
        android:id="@+id/rdbAldult"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:text="成人票\n(500/張)"
        app:layout_editor_absoluteX="42dp"
        app:layout_editor_absoluteY="254dp" />

    <RadioButton
        android:id="@+id/rdbChild"
        android:layout_width="107dp"
        android:layout_height="60dp"
        android:text="孩童票\n(250/張)"
        app:layout_editor_absoluteX="151dp"
        app:layout_editor_absoluteY="254dp" />

    <RadioButton
        android:id="@+id/rdbStudent"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:text="學生票\n(400/張)"
        app:layout_editor_absoluteX="257dp"
        app:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/btnSure"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:text="前往結帳"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="562dp" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="114dp"
        android:layout_height="58dp"
        android:text="選擇"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="562dp" />

    <RadioGroup
        android:id="@+id/rgTicketType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
        <!-- Add RadioButtons here -->
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>